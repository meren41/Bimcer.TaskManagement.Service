{
  "ConnectionStrings": {
    "Default": "Server=.;Database=BimcerTaskDb;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Jwt": {
    "Issuer": "Bimcer",
    "Audience": "BimcerUsers",
    "SecurityKey": "CHANGE-ME-AT-LEAST-32-CHARS-LONG-SECRET-KEY",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "Logs/log-.txt", "rollingInterval": "Day" } }
    ]
  },
  "AllowedHosts": "*"
}
