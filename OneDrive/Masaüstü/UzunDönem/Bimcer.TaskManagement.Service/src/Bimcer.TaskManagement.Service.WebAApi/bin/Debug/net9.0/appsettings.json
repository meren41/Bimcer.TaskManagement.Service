{
  "ConnectionStrings": {
    "Default": "Server=.;Database=BimcerTaskDb;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Jwt": {
    "Issuer": "TaskManagementService",
    "Audience": "TaskManagementClient",
    "SecurityKey": "ThisIsAVeryLongSecurityKeyThatIsAtLeast32CharactersLongForJWTSigning",
    "AccessTokenMinutes": 60,
    "RefreshTokenDays": 7
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "Logs/log-.txt", "rollingInterval": "Day" } }
    ]
  },
  "AllowedHosts": "*"
}
